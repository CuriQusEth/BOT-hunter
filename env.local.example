# Bot Hunter - Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# ===========================================
# CRITICAL: NEVER COMMIT .env.local TO GIT
# ===========================================

# Base Builder Code (from base.dev)
# This is your unique attribution code
NEXT_PUBLIC_BUILDER_CODE=bc_9b19fklw

# Payout Address (your wallet address)
# This address receives attribution rewards
NEXT_PUBLIC_PAYOUT_ADDRESS=0x29536D0bc1004ab274c4F0F59734Ad74D4559b7B

# Base App ID (from base.dev)
# This is your registered app identifier
NEXT_PUBLIC_BASE_APP_ID=68f40c278c4fe3f562003d93

# ===========================================
# SENSITIVE - SERVER ONLY (No NEXT_PUBLIC_)
# ===========================================

# Private API Keys (if needed)
# BUILDER_API_KEY=your_secret_api_key_here

# ===========================================
# OPTIONAL: Feature Flags
# ===========================================

# Enable test attribution page in production
NEXT_PUBLIC_ENABLE_TEST_PAGE=false

# Enable debug logging
NEXT_PUBLIC_DEBUG_ATTRIBUTION=false

# Environment
NODE_ENV=production
